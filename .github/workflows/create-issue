name: Create Issue from Teams

on:
  workflow_dispatch:
    inputs:
      author:
        description: '投稿者名'
        required: true
      message:
        description: 'メッセージ本文'
        required: true

jobs:
  create-issue:
    runs-on: ubuntu-latest
    steps:
      - name: Create GitHub Issue
        uses: actions/github-script@v7
        with:
          script: |
            const issueBody = `
**投稿者**: ${inputs.author}
**内容**:
${inputs.message}

---
※このIssueはTeamsからの投稿により自動生成されました。
            `;

            await github.rest.issues.create({
              owner: context.repo.owner,
              repo: context.repo.repo,
              title: `Teams投稿 from ${inputs.author}`,
              body: issueBody,
              labels: ['teams']
            });
